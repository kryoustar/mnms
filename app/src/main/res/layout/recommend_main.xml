<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="360dp"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <ScrollView
        android:layout_width="360dp"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="360dp"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="65dp"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="180dp"
                    android:layout_height="match_parent"
                    android:layout_marginTop="15dp"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/textView2"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="15dp"
                        android:fontFamily="@font/kbizm"
                        android:text="일주일 섭취량 분석"
                        android:textColor="#000000"
                        android:textSize="20dp" />
                </LinearLayout>
            </LinearLayout>
            <LinearLayout
                android:layout_width="180dp"
                android:layout_height="30dp"
                android:layout_marginLeft="20dp"
                android:orientation="horizontal">
                <LinearLayout
                    android:layout_width="180dp"
                    android:layout_height="match_parent"
                    android:orientation="horizontal">

                    <Button
                        android:id="@+id/weekdate"
                        android:layout_width="match_parent"
                        android:layout_height="30dp"
                        android:fontFamily="@font/kbizr"
                        android:textColor="#5aa139"
                        android:background="@drawable/border_1" />

                </LinearLayout>
            </LinearLayout>
            <LinearLayout
                android:layout_width="320dp"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:layout_marginTop="15dp"
                android:background="@drawable/my_border"
                android:backgroundTint="#515AA139"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="60dp"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="16dp"
                        android:layout_marginLeft="16dp"
                        android:layout_marginEnd="16dp"
                        android:layout_marginRight="16dp"
                        android:fontFamily="@font/kbizr"
                        android:minEms="3"
                        android:text="탄수화물"
                        android:textColor="#000000"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/low_text"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="16dp"
                        android:layout_marginLeft="16dp"
                        android:layout_marginEnd="16dp"
                        android:layout_marginRight="16dp"
                        android:fontFamily="@font/kbizr"
                        android:textColor="#000000" />

                    <com.example.project1.BarView
                        android:id="@+id/low_bar"
                        android:layout_width="0dp"
                        android:layout_height="30dp"
                        android:layout_weight="1" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="60dp"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="16dp"
                        android:layout_marginLeft="16dp"
                        android:layout_marginEnd="16dp"
                        android:layout_marginRight="16dp"
                        android:fontFamily="@font/kbizr"
                        android:minEms="3"
                        android:text="단백질"
                        android:textColor="#000000"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/mid_text"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="16dp"
                        android:layout_marginLeft="16dp"
                        android:layout_marginEnd="16dp"
                        android:layout_marginRight="16dp"
                        android:fontFamily="@font/kbizr"
                        android:textColor="#000000" />

                    <com.example.project1.BarView
                        android:id="@+id/mid_bar"
                        android:layout_width="0dp"
                        android:layout_height="30dp"
                        android:layout_weight="1" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="60dp"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="16dp"
                        android:layout_marginLeft="16dp"
                        android:layout_marginEnd="16dp"
                        android:layout_marginRight="16dp"
                        android:fontFamily="@font/kbizr"
                        android:minEms="3"
                        android:text="지방"
                        android:textColor="#000000"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/high_text"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="16dp"
                        android:layout_marginLeft="16dp"
                        android:layout_marginEnd="16dp"
                        android:layout_marginRight="16dp"
                        android:fontFamily="@font/kbizr"
                        android:textColor="#000000" />

                    <com.example.project1.BarView
                        android:id="@+id/high_bar"
                        android:layout_width="0dp"
                        android:layout_height="30dp"
                        android:layout_weight="1" />

                </LinearLayout>

            </LinearLayout>

            <TextView
                android:id="@+id/lacknutrients2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:fontFamily="@font/kbizr"
                android:paddingBottom="20dp"
                android:textColor="#000000" />


            <TextView
                android:id="@+id/lacknutrients"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:fontFamily="@font/kbizr"
                android:paddingTop="10dp"
                android:textColor="#000000" />

            <TextView
                android:id="@+id/recommendMenu"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:fontFamily="@font/kbizm"
                android:paddingTop="10dp"
                android:paddingBottom="10dp"
                android:textColor="#000000"
                android:textSize="20dp" />

            <LinearLayout
                android:id="@+id/lnlayout"
                android:layout_marginLeft="50dp"
                android:layout_width="330dp"
                android:layout_height="220dp"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="130dp"
                    android:layout_height="220dp"
                    android:orientation="vertical">

                    <ImageView
                        android:id="@+id/recommendImage1"
                        android:layout_marginTop="10dp"
                        android:layout_width="100dp"
                        android:layout_height="60dp"
                        android:scaleType="centerInside"
                        tools:srcCompat="@tools:sample/avatars" />

                    <TextView
                        android:id="@+id/recommendTitle1"
                        android:layout_width="match_parent"
                        android:layout_marginTop="10dp"
                        android:layout_height="20dp"
                        android:layout_marginLeft="10dp"
                        android:fontFamily="@font/kbizr"
                        android:textColor="#000000" />

                    <TextView
                        android:id="@+id/recommendMenu1"
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:layout_marginLeft="10dp"
                        android:fontFamily="@font/kbizr"
                        android:textColor="#000000" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="30dp"
                    android:layout_height="match_parent">

                </LinearLayout>

                <LinearLayout
                    android:layout_width="130dp"
                    android:layout_height="220dp"
                    android:orientation="vertical">

                    <ImageView
                        android:id="@+id/recommendImage2"
                        android:layout_marginTop="10dp"
                        android:layout_width="100dp"
                        android:layout_height="60dp"
                        android:scaleType="centerInside"
                        tools:srcCompat="@tools:sample/avatars" />

                    <TextView
                        android:id="@+id/recommendTitle2"
                        android:layout_width="match_parent"
                        android:layout_marginTop="10dp"
                        android:layout_height="20dp"
                        android:layout_marginLeft="10dp"
                        android:fontFamily="@font/kbizr"
                        android:textColor="#000000" />

                    <TextView
                        android:id="@+id/recommendMenu2"
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:layout_marginLeft="10dp"
                        android:fontFamily="@font/kbizr"
                        android:textColor="#000000" />
                </LinearLayout>
            </LinearLayout>


        </LinearLayout>


    </ScrollView>

</LinearLayout>