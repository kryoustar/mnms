<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="360dp"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"

    >
    /////tools:context=".BottomActivity">

    <ScrollView
        android:layout_width="360dp"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="360dp"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:gravity="center_horizontal|center_vertical"
                android:text="오늘 먹은 음식"
                android:fontFamily="@font/jua"
                android:textColor="#3C3F41"
                android:textSize="25sp" />

            <LinearLayout
                android:layout_width="360dp"
                android:layout_height="40dp"
                android:layout_marginTop="20dp"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/btnDate"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="10dp"
                    android:background="@drawable/border_1"
                    android:padding="10dp"
                    android:text="Today"
                    android:textAllCaps="false"
                    android:textColor="#5aa139"
                    android:textStyle="bold" />

                <LinearLayout
                    android:layout_width="190dp"
                    android:layout_height="match_parent"
                    android:orientation="horizontal"></LinearLayout>

                <ImageButton
                    android:id="@+id/meal_add"
                    android:layout_width="41dp"
                    android:layout_height="40dp"
                    android:layout_marginRight="25dp"
                    android:layout_weight="1"
                    android:background="#0000"
                    android:scaleType="fitCenter"
                    android:src="@drawable/button_add"
                    android:text="추가" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="360dp"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <ListView
                    android:id="@+id/mealListView"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="15dp"
                    android:divider="#00000000"
                    android:dividerHeight="1dp" />

            </LinearLayout>


            <LinearLayout
                android:layout_width="360dp"
                android:layout_height="match_parent"
                android:layout_marginTop="20dp"
                android:background="@drawable/my_border"
                android:backgroundTint="#2C41B839"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/todaykcal"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:fontFamily="@font/jua"
                    android:gravity="center"
                    android:paddingTop="5dp"
                    android:text=""
                    android:textColor="#000000"
                    android:textSize="15sp" />

                <LinearLayout
                    android:layout_width="360dp"
                    android:layout_height="150dp"
                    android:orientation="horizontal">
                    >

                    <LinearLayout
                        android:id="@+id/field1"
                        android:layout_width="120dp"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="5dp"
                        android:orientation="horizontal"></LinearLayout>

                    <LinearLayout
                        android:id="@+id/field2"
                        android:layout_width="120dp"
                        android:layout_height="match_parent"
                        android:orientation="horizontal"></LinearLayout>

                    <LinearLayout
                        android:id="@+id/field3"
                        android:layout_width="120dp"
                        android:layout_height="match_parent"
                        android:orientation="horizontal"></LinearLayout>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="360dp"
                    android:layout_height="42dp"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/textView5"
                        android:layout_width="120dp"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="5dp"
                        android:layout_weight="1"
                        android:fontFamily="@font/jua"
                        android:gravity="center"
                        android:text="탄수화물"
                        android:textColor="#000000" />

                    <TextView
                        android:id="@+id/textView9"
                        android:layout_width="120dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:fontFamily="@font/jua"
                        android:gravity="center"
                        android:text="단백질"
                        android:textColor="#000000" />

                    <TextView
                        android:id="@+id/textView10"
                        android:layout_width="120dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:fontFamily="@font/jua"
                        android:gravity="center"
                        android:text="지방"
                        android:textColor="#000000" />
                </LinearLayout>

            </LinearLayout>

        </LinearLayout>
    </ScrollView>


</RelativeLayout>